@using Radzen
@using NDAProcesses.Shared.Models

<RadzenTemplateForm TItem="ContactModel" Data="@Contact" Submit="@OnSubmit" Style="padding:20px;">
    <RadzenLabel Text="Name" Component="Name" />
    <RadzenTextBox @bind-Value="Contact.Name" Name="Name" Style="display:block;margin-bottom:10px" />
    <RadzenLabel Text="Phone" Component="Phone" />
    <RadzenTextBox @bind-Value="Contact.PhoneNumber" Name="Phone" Style="display:block;margin-bottom:10px" />
    <div style="text-align:right">
        <RadzenButton ButtonType="ButtonType.Submit" Text="Save" Style="margin-right:10px" />
        <RadzenButton Text="Cancel" Click="@OnCancel" ButtonStyle="ButtonStyle.Light" />
    </div>
</RadzenTemplateForm>

@code {
    [Parameter] public ContactModel Contact { get; set; } = new();

    void OnSubmit(ContactModel model)
    {
        DialogService.Close(model);
    }

    void OnCancel()
    {
        DialogService.Close(null);
    }
}
